@using Isen.DotNet.Library.Models.Implementation;
@using Isen.DotNet.Library.Repositories.Interfaces;
@{
    ViewData["Title"] = "Departement (détail)";
}
@model Departement;

<div class="row">
    <div class="col-md-12">
        <h1>Détail d'un département <small>/département/detail</small></h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form" asp-action="Detail">

            <input type="hidden" 
                value="@Model?.Id" asp-for="Id" />

            <div>
                <label for="FirstName" class="control-label">
                    Nom du département :
                </label>
                <input type="text" class="form-control"
                    id="Name" placeholder="Nom du département"
                    value="@Model?.Name" asp-for="Name" />
            </div>

            <div>
                <label for="LastName" class="control-label">
                    Code du département :
                </label>
                <input type="text" class="form-control"
                    id="CodeDepartement" placeholder="Code du département"
                    value="@Model?.CodeDepartement" asp-for="CodeDepartement" />
            </div>

            <br />

            <input type="submit" class="btn btn-primary"
                value="Valider" />
            <a class="btn btn-default" 
                asp-controller="Departement" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>