@using Isen.DotNet.Library.Models.Implementation;
@{
    ViewData["Title"] = "Commune";
}
@model IEnumerable<Commune>;

<div class="row">
    <div class="col-md-12">
        <h1>Communes <small>/communes/index</small></h1>
    </div>
</div>
<div class="row">
    <a class="btn btn-default" 
        asp-controller="Commune" asp-action="Detail">Ajouter une commune...</a>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Commune</th>
                <th>Département</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var commune in Model)
            {
            <tr>
                <td>@commune.Id</td>
                <td>@commune.Name</td>
                <td>@commune.Departement?.Name</td>
                <td>@commune.Latitude</td>
                <td>@commune.Longitude</td>
                <td>
                    <a class="btn btn-default" 
                        asp-controller="commune" 
                        asp-action="Detail" 
                        asp-route-id="@commune.Id">Editer</a>
                    &nbsp;
                    <a class="btn btn-danger" 
                        asp-controller="commune" 
                        asp-action="Delete" 
                        asp-route-id="@commune.Id">Supprimer</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>